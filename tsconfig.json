{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "references": [{ "path": "./tsconfig.node.json" }],
  "paths": {
    "@es-drager/*": [
      "packages/*/src"
    ],
    "es-drager": [
      "packages/pinia/src"
    ]
  },
  "types": [
    "node",
    "vite/client"
  ]
}
